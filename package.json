{
  "name": "js-pixi-es6",
  "version": "1.0.0",
  "description": "Pixi.js ES6 template",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf release/*",
    "copy": "copyfiles index.html resources/** release",
    "bundle": "browserify index.js | uglifyjs -mc > release/bundle.js",
    "zip": "bestzip build.zip release/*",
    "release": "npm run clean && npm run copy && npm run bundle && npm run zip",
    "watch": "budo index.js:bundle.js -o -l --wg resources/**/*"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "author": "Artjom Vinnikov (https://github.com/Zenext)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zenext/js-pixi-es6"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "bestzip": "^1.1.3",
    "browserify": "^13.0.1",
    "budo": "^8.3.0",
    "copyfiles": "^1.0.0",
    "rimraf": "^2.5.3",
    "uglify-js": "^2.7.0"
  },
  "dependencies": {
    "pixi.js": "^4.1.0"
  }
}
